services:
  jenkins:
    image: jenkins/jenkins:lts
    container_name: jenkins-master
    privileged: true
    user: root
    ports:
      - 8081:8080
      - 50000:50000
    volumes:
      - jenkins_home:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - jenkins-net

networks:
  jenkins-net:

volumes:
  jenkins_home:
